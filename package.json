{
  "name": "@muravjev/config",
  "version": "1.0.0",
  "private": true,
  "description": "Shared monorepo config",
  "author": "Sergey Muravjev <sergey.muravjev@gmail.com> (http://github.com/muravjev)",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf \"**/node_modules\"",
    "fresh": "pnpm clean && pnpm i",
    "format": "prettier",
    "format:check": "pnpm format --check --debug-check",
    "format:fix": "pnpm format --write",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "commitlint": "commitlint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.1.2",
    "@muravjev/commitlint-config": "*",
    "@muravjev/eslint-config": "*",
    "@muravjev/prettier-config": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "lint-staged": {
    "*.{js,json}": "pnpm format:fix",
    "*.js": "pnpm lint:fix"
  },
  "engines": {
    "node": ">=14.6.0",
    "pnpm": ">=7.10.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "packageManager": "pnpm@7.10.0"
}
